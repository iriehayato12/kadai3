<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/76f838f2af.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-left bg-dark">
     <div class="container">
       
      <a class="navbar-brand" href="/">
       <span>Bookers</span>
      </a>
     
     <ul class="navbar-nav ml-auto">
       <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to user_path(current_user), class: "nav-link text-light" do %>
       <span><i class="fa-solid fa-house" style="color: #ffffff;"></i>Home</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to users_path, class: "nav-link text-light" do %>
        <span><i class="fa-solid fa-users" style="color: #ffffff;"></i>Users</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to books_path, class: "nav-link text-light" do %>
        <span><i class="fa-solid fa-book-open" style="color: #ffffff;"></i>Books</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
        <Span><i class="fa-solid fa-right-from-bracket" style="color: #ffffff;"></i>Log out</Span>
        <% end %>
      </li>
    <% else %>
      <li class="nav-item">
        <%= link_to '/', class: "nav-link text-light" do %>
        <span><i class="fa-solid fa-house" style="color: #ffffff;"></i>Home</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to about_path, class: "nav-link text-light" do %>
        <span><i class="fa-solid fa-link" style="color: #ffffff;"></i>About</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
        <Span><i class="fa-solid fa-user-plus" style="color: #ffffff;"></i>Sign up</Span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to user_session_path, class: "nav-link text-light" do %>
        <span><i class="fa-solid fa-right-to-bracket" style="color: #ffffff;"></i>Log in</span>
        <% end %>
      </li>
    <% end %>
     </ul>
    </nav>
   </div> 
</header>
  
  <main>
    <%= yield %>
  </main>
    
    <footer>
     <div class="container mt-5">
      <div class="row">
       <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
       </div>
      </div>
     </div>
  </footer>
  </body>
</html>
