
<div class="container">
 <div class="row">
  <div class="col-md-8 col-sm-12 col-lg-5 px-sm-5 mx-auto px-5">
     
     
     <h2>User info</h2>
     <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li> <%= message %></li>
          <% end %>
        </ul>
     <% end %>
      <%= form_with model: @user do |f| %>
      <label for="user_name">Name</label><br/>
      <%= f.text_field :name %>
     
      
      <div class="form-group">
      <label for="profile_image">Image</label><br/>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像",accept: "image/*" %>
      </div>
      
      <div class="form-group">
      <label for="introduction">Introduction</label><br/>
      <%= f.text_area :introduction %>
      </div>
     
       <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
  </div>
 </div>
</div>